# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
keep_padding = true
space_redirects = true
spaces_around_operators = true
trim_trailing_whitespace = true

[*.sh]
shell_varint = posix
indent_size = tab
indent_style = tab

[Dockerfile*]
indent_size = 4
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space
